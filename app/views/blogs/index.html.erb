<div class="contents row" >
  <% @blogs.each do |blog| %>
  <div class="content_post" style="background-image: url(<%= blog.image %>);">
    <% if user_signed_in? && current_user.id == blog.user_id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '破壊する', "/blogs/#{blog.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(blog.text) %>
        <span class="name">
        <a href="">
            <span>投下人</span><%= blog.user.nickname %>
          </a>
        </span>
      </div>
  <% end %>
 <%= paginate(@blogs) %>
</div>